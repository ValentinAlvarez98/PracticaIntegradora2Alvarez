{{!-- Se crea una vista de perfil --}}
<button type="submit" class="col-6 btn btn-primary rounded-0 ">
      <a href="/" class="text-decoration-none text-reset">PRODUCTOS</a>
</button>
<div class="row justify-content-center pe-1 ps-1">
      <div class="col-xxl-10 col-xl-10 col-lg-10 col-md-10 col-sm-12 col-xs-12 border mt-5 mb-5 pt-5 pb-5" id="login">


            <div class="bloque mb-5" id="datosBasicos">
                  <div class="row">
                        <h2 class="col-12 text-center mb-4"> Mi cuenta </h2>
                  </div>
                  <div class="row">
                        <h5 class="col-12 text-center mt-4">DATOS BÁSICOS</h5>
                  </div>
                  <div class="row">
                        
                        <div class="col-12 d-flex justify-content-center">
                              <form class="col-xxl-10 col-xl-10 col-lg-10 col-md-12 col-sm-12 col-xs-12 mt-4"
                                    id="profileForm">
                                    <div class="mb-4 row">
                                          <div class="col-6">
                                                <input type="text" class="form-control form-control-lg rounded-0"
                                                      id="nombreMiCuenta" placeholder="{{userName}} (*)" maxlength="60"
                                                      name="first_name" required>
                                                <p class="hidden" id="nombreRequerido">Por favor, ingrese su nombre.</p>
                                          </div>
                                          <div class="col-6">
                                                <input type="text" class="form-control form-control-lg rounded-0"
                                                      id="apellidoMiCuenta" placeholder="{{userLastName}} (*)" maxlength="60"
                                                      name="last_name" required>
                                          </div>
                                    </div>
                                    <div class="row">
                                          <div class="col-6">
                                                <input type="email" class="form-control form-control-lg rounded-0"
                                                       placeholder="{{userEmail}} (*)" maxlength="60"
                                                      name="email" required>
                                                      {{#if invalidEmail}}
                                                      <p class="text-danger">Ingrese un email válido para continuar</p>
                                                      {{/if}}

                                          </div>
                                          <div class="col-6">
                                                <input type="number" class="form-control form-control-lg rounded-0"
                                                      id="ciMiCuenta" placeholder="{{userPhone}}" maxlength="60"
                                                      name="phone">
                                                      <p class="aclaraciones mt-3">Si quiere eliminar el teléfono, coloque un 0</p>
                                          </div>
                                    </div>
                                    <div class="row d-flex justify-content-center">
                                          <div class="col-5 ">
                                                <button type="submit" class="btn btn-dark rounded-0 "
                                                      id="editarDatosBasicos"><a
                                                            class="text-decoration-none text-reset">EDITAR </a></button>
                                                <p class="aclaraciones mt-3">Los campos con (*) son obligatorios.</p>
                                                <label for="editarDatosBasicos" class="hidden"
                                                      id="confirmacionDatosBasicos">Los datos se han guardado
                                                      correctamente.</label>
                                          </div>
                                    </div>

                                    
                              </form>
                              
                        </div>

                        <div class="row d-flex justify-content-center m-0">
                              <form class="col-8 m-0" id="deleteForm">
                                    <button type="submit" class=" col-8 btn btn-dark rounded-0 p-3"><a
                                                class="text-decoration-none text-reset">ELIMINAR CUENTA</a></button>
                              </form>
                        </div>
                  </div>
            </div>
     </div>
</div>
      
<script src="/js/profile.js"></script>

<script>

const urlParams = new URLSearchParams(window.location.search);

const token = urlParams.get('token');

console.log(token);

if (token) {
      
      fetch(`/api/sessions/githubToken?token=${token}`, {
            method: 'POST',
            headers: {
                  'Content-Type': 'application/json',
                  'authorization': `Bearer ${localStorage.getItem('token')}`
            }
      }).then(response => {

if (response.status === 200) {

      response.json().then(data =>{
            localStorage.setItem('token', data.token);
            window.location.href = '/profile';
      });
      } else {
            response.json().then(data => {
                  console.log(data);
            });
      }
      });

} 


</script>
